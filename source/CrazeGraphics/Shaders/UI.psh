#include "globals.incl"


struct PS_INPUT
{
	float3 uv : TEXCOORD0;
	float4 color : COLOR;
};

Texture2D Decal : register(t0);

float4 main(PS_INPUT input) : SV_Target0
{
	//input.uv = float2(input.uv.x, 1.f - input.uv.y);
	float4 color = input.color;
	if (input.uv.z > 0.f)
	{
		color *= Decal.Sample(Bilinear, input.uv.xy);
	}

	if (color.a < 0.01f)
	{
		discard;
	}

	return color;
}